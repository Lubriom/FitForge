generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id       Int     @id @default(autoincrement())
  nombre   String? @db.VarChar(100)
  email    String? @unique @db.VarChar(100)
  password String? @db.VarChar(255)
  role     String? @db.VarChar(255)
}

